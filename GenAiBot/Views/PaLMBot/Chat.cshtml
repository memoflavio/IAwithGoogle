@{
    ViewData["Title"] = "PaLM Bot"; // Set your page title here
}

<div class="m-3 p-4 bg-secondary text-white">
    <div class="container">
        <h1 class="text-white">@Model.BotName</h1>
        <h2 class="text-white">@Model.Slogan</h2>
    </div>
</div>
<div class="container p-3">
    <div class="row">
        <div class="col-md-12">
            <div class="card mt-3" style="background-color: #5d5d5d;">
                <div class="card-body" style="background-color: #212529; border: 0px;">
                    <div class="output" style="height: 500px; overflow-y: auto; background-color: #212529; color: white;">
                        <p class="text-white">@Html.Raw(Model.Message)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form method="post" asp-action="Chat">
        <input type="text" autocomplete="off" name="prompt" class="form-control mt-3" placeholder="Enter a prompt" class="form-control">
        <button type="submit" id="submit-button" class="btn btn-secondary mt-3">
            Submit
            <span class="spinner-border spinner-border-sm d-none" id="spinner" role="status" aria-hidden="true"></span>
        </button>
    </form>
</div>
<script>
    document.getElementById('submit-button').addEventListener('click', function () {
        document.getElementById('spinner').classList.remove('d-none');
    });
</script>
